<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    
          <div class="form-group">
            <%= form.label :name,"氏名" %>
            <%= form.text_field :name, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :email,"メールアドレス" %>
            <%= form.text_field :email, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :password, "パスワード(8文字以上32文字以内で入力してください)" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation, "パスワードの確認" %>
            <%= form.password_field :password_confirmation, class: "form-control", required: true %>
          </div>
    <div class="action text-center">
      <%= form.submit "登録",class: "btn btn-secondary mx-auto mt-5 btn-block" %>
    </div>
  </div>
<% end %>